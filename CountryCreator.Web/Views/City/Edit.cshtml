@model CountryCreator.Web.ViewModels.CityEditViewModel

@{
    ViewData["Title"] = "Edit City";
}

<div class="container col-lg-12">
    <div class="row col-sm-6 center">
        <h3 class="mb-3 mt-3">Edit City</h3>
        <form asp-controller="City" asp-action="Edit" autocomplete="off" method="post" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingCityNameInput" placeholder="cityName" name="CityName" value="@Model.Name">
                <label for="floatingCityNameInput">City name</label>
            </div>
            <div>
                <label class="ms-1" for="assigneeEmployee">Country</label>
                <select class="form-select mb-3" id="country" name="CountryId">
                    <option value="@Model.CountryId" selected>@Model.CountryName</option>
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country.Id">@country.CountryName</option>
                    }
                </select>
            </div>
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
    </div>
</div>